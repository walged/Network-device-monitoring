{
  "appId": "com.scc.app",
  "productName": "Switch Camera Control",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron-prod.js",
    "preload.js",
    "assets/**/*",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "assets",
      "to": "assets",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      },
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "scc.png",
    "verifyUpdateCodeSignature": false,
    "signAndEditExecutable": false
  },
  "portable": {
    "artifactName": "SCC-Portable-${version}.exe",
    "requestExecutionLevel": "user"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "artifactName": "SCC-Setup-${version}.exe",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Switch Camera Control"
  },
  "forceCodeSigning": false
}